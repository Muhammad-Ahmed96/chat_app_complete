
.row
  -if message.user == current_user
    -if message.msg_type == "text"
      %div.col-12.mb-2
        %div
          %span.current_user_name=message.user.name
          %span.current_user_text= message.message
        %p{style: 'font-size:11px'}=message.created_at.strftime("%d/%m/%Y - %R")
    -else
      %div.col-12.mb-2
        %div
          %span.current_user_name=message.user.name
          %span= image_tag message.avatar.url(:medium), alt: 'image', height: '250', width: '300', class: 'img img-thumbnail'
        %p{style: 'font-size:11px'}=message.created_at.strftime("%d/%m/%Y - %R")
  -else
    -if message.msg_type == "text"
      %div.col-12.mb-2
        %div{style: 'display: flex;justify-content: flex-end;'}
          %span.other_user_text.float-right= message.message
          %span.other_user_name=message.user.name
        %br
        %br
        %p.float-right{style: 'font-size:11px'}=message.created_at.strftime("%d/%m/%Y - %R")
    -else
      %div.col-12.mb-z
        %div{style: 'display: flex;justify-content: flex-end;'}
          %span.float-right= image_tag message.avatar.url(:medium), alt: 'image', height: '250', width: '300', class: 'img img-thumbnail'
          %span.other_user_name=message.user.name
        %br
        %br
        %p.float-right{style: 'font-size:11px'}=message.created_at.strftime("%d/%m/%Y - %R")